<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resoluciones [
    <!ELEMENT resoluciones (resolucion*)>
    <!-- aÃ±adimos el elemento resolucion y un * para poder ponerlo varias veces-->
    <!ELEMENT resolucion EMPTY>
    <!ATTLIST resolucion nombre NMTOKEN #REQUIRED>
    <!ATTLIST resolucion alto CDATA #REQUIRED>
    <!ATTLIST resolucion ancho CDATA #REQUIRED>
    <!-- cambiamos resoluciones por resolucion para no tener errores de nombres repetidos y que nos obligue a poner 
        atributos en el elemento raiz-->
]>
<resoluciones>
    <resolucion nombre="VGA" alto="480" ancho="640" />
    <resolucion nombre="XGA" alto="1024" ancho="768" />
    <resolucion nombre="HD1080" alto="1920" ancho="1080" />
    <!-- quitamos el espacio que tiene nombre para que no de error -->
</resoluciones>